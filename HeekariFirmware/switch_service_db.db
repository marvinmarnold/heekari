/******************************************************************************
 *
 *  FILE
 *      switch_service_db.db
 *
 *  DESCRIPTION
 *      This file defines the Switch Service in JSON format. This file is 
 *      included in the main application data base file which is used to 
 *      produce ATT flat data base.
 *
 *****************************************************************************/
#ifndef __SWITCH_SERVICE_DB__
#define __SWITCH_SERVICE_DB__

#include "switch_uuids.h"

/* For service details, refer http://developer.bluetooth.org/gatt/services/
 * Pages/ServiceViewer.aspx?u=org.bluetooth.service.battery_service.xml
 */

/* Primary service declaration of Battery service */
primary_service {
    uuid : UUID_SWITCH_SERVICE,
    name : "SWITCH_SERVICE", /* Name will be used in handle name macro */

    /* Switch status characteristic */

    /* Switch status characteristic supports IRQ flag, thereby reads and writes on 
     * characteristic value are handled by application.
     */

    characteristic {
        uuid : UUID_SWITCH_INTENSITY,
        name : "SWITCH_INTENSITY",
        flags : FLAG_IRQ,
        properties : read,
        value : 0x00,

        client_config {
            flags : FLAG_IRQ,
            name : "SWITCH_STATUS_C_CFG"
        }

    }
},
#endif /* __SWITCH_SERVICE_DB__ */